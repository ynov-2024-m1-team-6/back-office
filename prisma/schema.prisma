generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Product {
  id          String  @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  description String?
  active      Boolean @default(false)
  thumbnail   String
  packshot    String  @default("/uploads/")
  price       Float   @default(0.00)
}
